{
  "name": "react-frontend-template",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "env-cmd -e local vite",
    "build": "vite build",
    "build:dev": "env-cmd -e dev npm run build",
    "build:qa": "env-cmd -e qa npm run build",
    "build:prod": "GENERATE_SOURCEMAP=false env-cmd -e prod npm run build",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report"
  },
  "dependencies": {
    "@base-ui/react": "^1.1.0",
    "@hookform/resolvers": "^4.1.3",
    "@tanstack/react-query": "^5.17.15",
    "axios": "^1.8.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "env-cmd": "^10.1.0",
    "lucide-react": "^0.562.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.54.2",
    "react-router-dom": "6.22.3",
    "tailwind-merge": "^3.4.0",
    "typescript": "5.1.6",
    "web-vitals": "^2.1.3",
    "yup": "^1.7.1",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@babel/core": "^7.20.5",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^16.11.19",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.18",
    "@types/react-router-dom": "^5.3.2",
    "@vitejs/plugin-react": "^5.1.2",
    "msw": "^2.0.0",
    "tailwindcss": "^4.1.18",
    "vite": "^7.3.1"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
