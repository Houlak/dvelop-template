    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "6.22.3",
    "sass-loader": "^13.2.0",
    "typescript": "5.1.6",
    "web-vitals": "^2.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.20.5",
    "@types/node": "^16.11.19",
    "@types/node-sass": "^4.11.2",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.18",
    "@types/react-router-dom": "^5.3.2",
    "@vitejs/plugin-react": "^2.0.1",
    "sass": "^1.58.0",
    "vite": "^3.0.7"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
